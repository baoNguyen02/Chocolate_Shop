@page
@model Chocolate_Shop.Pages.Account.Orders.IndexModel
@{
    ViewData["Title"] = "Cart";
}

<section class="h-100 h-custom" style="background-color: #542515;">
    <div class="container py-5 h-100">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col-12">
                <div class="card card-registration card-registration-2" style="border-radius: 15px;">
                    <div class="card-body p-0">
                        <div class="row g-0">
                            <div class="col-lg-8">
                                <div class="p-5">
                                    <div class="d-flex justify-content-between align-items-center mb-5">
                                        <h1 class="fw-bold mb-0 text-black">Shopping Cart</h1>                                    
                                    </div>                                  
                                    <hr class="my-4">
                                    @foreach(var item in Model.Order)
                                    {
                                        <div class="row mb-4 d-flex justify-content-between align-items-center">
                                            <div class="col-md-2 col-lg-2 col-xl-2">
                                                <img src="@item.Product.ProductImage"
                                                     class="img-fluid rounded-3" alt="Cotton T-shirt">
                                            </div>
                                            <div class="col-md-3 col-lg-3 col-xl-3">                                          
                                                <h6 class="text-black mb-0">@item.Product.ProductName</h6>
                                            </div>
                                            <div class="col-md-3 col-lg-3 col-xl-2 d-flex">
                                                <button onclick='window.location.href="@Url.Page("./Edit", new { id = item.OrderId, quantity = -1 })"'>
                                                    <i>-</i>
                                                </button>

                                                <input id="form1" min="0" name="quantity" value="@item.QuantityPerUnit" type="number"
                                                       class="form-control form-control-sm" />

                                                <button onclick="window.location.href='@Url.Page("./Edit", new { id = item.OrderId, quantity = 1 })'">
                                                    <i>+</i>
                                                </button>
                                            </div>
                                            <div class="col-md-3 col-lg-2 col-xl-2 offset-lg-1">
                                                <h6 class="mb-0">$ @item.UnitPrice</h6>
                                            </div>
                                            <div class="col-md-1 col-lg-1 col-xl-1">
                                                <a asp-page="./Delete" asp-route-id="@item.OrderId">X</a>
                                            </div>
                                        </div>
                                    }
                                    
                                    <hr class="my-4">

                                    <div class="pt-5">
                                        <h6 class="mb-0">
                                            <a href="~/Index" class="text-body">
                                                <i class="fas fa-long-arrow-alt-left me-2"></i>Back to shop
                                            </a>
                                        </h6>
                                    </div>
                                </div>
                            </div>
                            <div class="col-lg-4 bg-grey">
                                <div class="p-5">
                                    <h3 class="fw-bold mb-5 mt-2 pt-1">Summary</h3>
                                    <hr class="my-4">

                                    <p>
                                    </p>
                                    <a class="btn btn-success" href="~/Account/AddressShip/Index">Create Address</a><br></br>
                                    <h5 class="text-uppercase mb-3">Address</h5>
                                    <form method="post">
                                        <div class="mb-4 pb-2">
                                            <select class="select" asp-for="SelectedAddressShipId">
                                                @foreach(var item in Model.AddressShip)
                                                {
                                                    <option value="@item.AddressShipId">@item.Name - @item.Phone - @item.Address</option>
                                                }                                              
                                            </select>
                                        </div>

                                        <hr class="my-4">

                                        <div class="d-flex justify-content-between mb-5">
                                            <h5 class="text-uppercase">Total price</h5>
                                            <h5>$ @Model.totalPrice</h5>
                                        </div>

                                        <button type="submit" class="btn btn-dark btn-block btn-lg"
                                                data-mdb-ripple-color="dark">
                                            Checkout
                                        </button>
                                    </form>
                                </div>
                            </div>        
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
