@{
    ViewData["Title"] = "Send Email";
}

<section class="vh-100">
    <div class="container-fluid">
        <div class="row">
            <div class="col-sm-6 text-black">

                <div class="d-flex flex-column align-items-center h-custom-2 px-5 ms-xl-4 mt-5 pt-5 pt-xl-0 mt-xl-n5">

                    <h1 class="fw-normal mb-3 pb-3" style="letter-spacing: 1px;">Send Email Successfull</h1>

                    <h5 class="fw-normal mb-3 pb-3" style="letter-spacing: 1px;">Please check your email!</h5>

                    <p>Don't have an account? <a href="@Url.Action("Login", "Access")" class="link-info">Login here</a></p>

                </div>

            </div>
            <div class="col-sm-6 px-0 d-none d-sm-block">
                <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-login-form/img3.webp"
                     alt="Login image" class="w-100 vh-100" style="object-fit: cover; object-position: left;">
            </div>
        </div>
    </div>
</section>
