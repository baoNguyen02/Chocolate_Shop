@page
@model IndexModel
@{
    ViewData["Title"] = "ChocoLux";
}
<!-- slider section -->
<section class="slider_section ">
    <div id="customCarousel1" class="carousel slide" data-ride="carousel">
        <div class="carousel-inner">
            <div class="carousel-item active">
                <div class="container">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="detail_box">
                                <h1>
                                    Chocolate <br>
                                    <span>
                                        Yummy
                                    </span>
                                </h1>
                                <a href="#">
                                    <span>
                                        Read More
                                    </span>
                                    <img src="images/white-arrow.png" alt="">
                                </a>
                            </div>
                        </div>
                        <div class="col-md-4 ml-auto">
                            <div class="img-box">
                                <img src="images/slider-img.png" alt="">
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="carousel-item ">
                <div class="container">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="detail_box">
                                <h1>
                                    Chocolate <br>
                                    <span>
                                        Yummy
                                    </span>
                                </h1>
                                <a href="#">
                                    <span>
                                        Read More
                                    </span>
                                    <img src="images/white-arrow.png" alt="">
                                </a>
                            </div>
                        </div>
                        <div class="col-md-4 ml-auto">
                            <div class="img-box">
                                <img src="images/slider-img.png" alt="">
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="carousel_btn-box">
        <a class="carousel-control-prev" href="#customCarousel1" role="button" data-slide="prev">
            <i class="fa fa-arrow-left" aria-hidden="true"></i>
            <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#customCarousel1" role="button" data-slide="next">
            <i class="fa fa-arrow-right" aria-hidden="true"></i>
            <span class="sr-only">Next</span>
        </a>
    </div>
</section>
<!-- chocolate section -->

<section class="chocolate_section layout_padding">
    <div class="container">
        <div class="heading_container">
            <h2>
                Our products
            </h2>
            <p>
                Bringing the sweetest things to you.
            </p>
        </div>
    </div>
    <div class="container">
        <div class="chocolate_container">
            @foreach (var item in Model.Product)
            {
                <div class="box">
                    <div class="img-box">
                        <img src="@item.ProductImage" alt=""
                             style="width: 352px; height: 350px; max-width: 100%; max-height: 100%;">
                    </div>
                    <div class="detail-box">
                        <h6>
                            <span>@item.ProductName</span>
                        </h6>
                        <h5>
                            $@item.Price
                        </h5>
                        <form method="post" asp-page-handler="AddToCart" asp-route-id="@item.ProductId">
                            <button type="submit" class="btn btn-light">Add to cart</button>
                        </form>
                    </div>
                </div>
            }
        </div>
    </div>
</section>

<!-- end chocolate section -->
